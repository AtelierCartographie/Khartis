{{#x-dropdown-plus as |facet|}}
  {{#facet.trigger}}
  <div class="button transform-mapping-button horizontal middle flow">
      <div class="solid icon"><i class="iconfont iconfont-viz-change"></i></div>
      <div class="button-label">{{x-capitalize (t 'visualization.variable.transform')}}</div>
  </div>
  {{/facet.trigger}}
  {{#facet.list}}
    {{#each availableMappings as |m|}}
      <li class="clickable layer" {{action 'select' m}}>
        <div class="horizontal middle flow">
          <div class="caption">
            <img src="{{r-url (concat 'assets/images/viz/' m.img)}}">
          </div>
          <div class="vertical stretched middle flow padded-h content">
            {{visualization-title mapping=m}}
          </div>
        </div>
      </li>
    {{/each}}
  {{/facet.list}}
{{/x-dropdown-plus}}