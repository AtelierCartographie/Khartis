{{#x-dropdown-plus as |facet|}}
    {{#facet.trigger class="horizontal space-between flow filled on-white"}}
        {{#if selected}}
        {{drawing-feature-info/marker-selection/swatch marker=selected}}
        {{else}}
        <i class="iconfont iconfont-ban normal-size"></i>
        {{/if}}
        <i class="iconfont iconfont-angle-down"></i>
    {{/facet.trigger}}
    {{#facet.list}}
        <li {{action 'selectMarker' null}} class="horizontal middle center airy flow">
            aucun
        </li>
        {{#each markers as |marker|}}
        <li {{action 'selectMarker' marker}} class="horizontal middle center airy flow">
            {{drawing-feature-info/marker-selection/swatch marker=marker}}
        </li>
        {{/each}}
    {{/facet.list}}
{{/x-dropdown-plus}}