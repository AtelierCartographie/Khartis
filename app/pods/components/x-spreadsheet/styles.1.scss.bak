& {
    @extend .flow;
    @extend .vertical.flow;
    display: block;
    position: relative;
}

thead tr {
    border: none;
}

thead th {
    visibility: hidden;
}

tr:hover {
    background-color: #d0d0d0;
}

.fixed-thead {
    
    @extend .filled;
    position: absolute;
    top: 0;
    width: 100%;
    border-bottom: 1px solid #d0d0d0;
    
}


.table-wrap {
    height: 100%;
    flex-basis: auto;
    overflow: scroll;
}

td {
    position: relative;
}

/* cell */
td input {
    @extend .filled;
    @extend .with-rielief;
    display: none;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

td.edited input {
    display: block;
}


/* resize-handle */
.resize-handle {
    @extend .filled;
    @extend .filled.primary;
    position: absolute;
    top: 0px;
    //display: none;
    width: 5px;
    height: 100%;
}