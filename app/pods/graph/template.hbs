<div class="graph vertical flow">
    <div class="horizontal flow">
      <aside class="solid vertical flow">
        {{outlet 'header'}}
        <div class="horizontal flow">
          <div class="vertical-navbar">
              <div class="state-icon {{if isInStateGeovars 'selected'}}" {{action 'selectState' 'geovars'}}><i
                      class="iconfont iconfont-map"></i></div>
              <div class="state-icon {{if isInStateLayout 'selected'}}" {{action 'selectState' 'layout'}}><i
                      class="iconfont iconfont-map"></i></div>
              <div class="state-icon {{if isInStateMapping 'selected'}}" {{action 'selectState' 'mapping'}}><i
                      class="iconfont iconfont-sliders"></i></div>
          </div>
          <div class="airy vertical flow padded">
            {{outlet 'sidebar'}}
          </div>
        </div>
      </aside>
        <div class="stretched flow" style="position: relative;">
            <div style="position: absolute; top: 0px; left: 0px; bottom: 0px; right: 0px">
              {{#if basemapData}}
              
                {{map-editor data=model.data
                base=basemapData
                graphLayout=model.graphLayout
                graphLayers=model.graphLayers
                onAskVersioning="onAskVersioning"
                }}

              {{/if}}
              
              {{#x-sticky-panel class="projection-panel open"}}

                {{#x-tooltip message="Outils" position="left"}}
                    <div class="trigger">
                        <i class="iconfont iconfont-more-horiz"></i>
                    </div>
                {{/x-tooltip}}


                  <div class="wrapper">
                    <div class="padded">
                      <h3>Projection</h3>
                    </div>
                    <div class="padded">
                      {{t (concat "projection." model.graphLayout.projection ".name")}} <i class="iconfont iconfont-pencil"></i>
                      {{x-stars value=5 class="stars"}}
                    </div>
                      {{#x-dropdown.x-trigger
                        dropdownPivot="top left"
                        triggerPivot="bottom left"}}
                        <a class="dropdown-trigger">
                            {{#unless model.graphLayout.projection}}
                            Projection 
                            {{else}}
                            
                            {{/unless}}
                            <i class="iconfont iconfont-angle-down"></i>
                        </a>
                      {{/x-dropdown.x-trigger}}
                      <ul class="dropdown">
                        {{#each-in availableProjections as |id o|}}
                          <li {{action 'bindProjection' id}}>
                            <div>{{t (concat "projection." id ".name")}}</div>
                            <div class="projection-description"><small>{{t (concat "projection." id ".description")}}</small></div>
                          </li>
                        {{/each-in}}
                      </ul>
                  </div>
              {{/x-sticky-panel}}

              {{#x-sticky-panel class="toolbar"}}

                {{#x-tooltip message="Outils" position="left"}}
                    <div class="trigger">
                        <i class="iconfont iconfont-more-horiz"></i>
                    </div>
                {{/x-tooltip}}


                  <div class="wrapper">
                      <ul class="toolbar-items">
                        {{#x-tooltip message="Undo" position="left"}}
                            <li>
                                <i class="iconfont iconfont-undo"></i>
                            </li>
                        {{/x-tooltip}}
                        {{#x-tooltip message="Redo" position="left"}}
                            <li>
                                <i class="iconfont iconfont-redo"></i>
                            </li>
                        {{/x-tooltip}}
                        {{#x-tooltip message="DÃ©placer" position="left"}}
                            <li {{action 'switchEditMode' 'move'}}>
                                <i class="iconfont iconfont-arrows"></i>
                            </li>
                        {{/x-tooltip}}
                      </ul>
                  </div>
              {{/x-sticky-panel}}
              
              <div class="configuration-panel filled padded with-relief topbar split-view">
                <div class="titlebar">
                  <div class="title"><a>Choix d'une projection </a> <i class="iconfont iconfont-angle-right separator"></i> Choix d'une projection</div>
                  <div class="actions">
                    <i class="iconfont iconfont-times-circle"></i>
                  </div>
                </div>
                <div class="body">
                  <ul class="collection">
                    <li>
                      <div class="horizontal airy flow">
                        <img src="images/yuna.jpg" alt="" class="solid">
                        <div class="vertical flow">
                          <span class="title">Title</span>
                          <p class="description">Description</p>
                        </div>
                      </div>
                    </li>
                    <li>
                      <div class="horizontal airy flow">
                        <img src="images/yuna.jpg" alt="" class="solid">
                        <div class="vertical flow">
                          <span class="title">Title</span>
                          <p class="description">Description</p>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
        </div>
    </div>
    
</div>