
<div class="report vertical flow">

    <div class="vertical airy padded flow">
        <h2 class="title">{{x-capitalize (t 'project.step2.title.preview')}}</h2>

        <div class="report-preview">
            <table>
                <thead>
                    <tr>
                        {{#each model.project.data.header.cells as |cell|}}
                            <th>{{cell.value}}</th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    {{#each bodyPreview as |row|}}
                        <tr>
                            {{#each row.cells as |cell|}}
                                <td>{{cell.value}}</td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="horizontal right padded-v solid flow">
          {{#x-button class="solid filled primary2" disabled=(x-some (x-not model.project.geoDef) hasErrors) action=(action 'next')}}
            {{x-capitalize (t "general.next")}}
          {{/x-button}}
        </div>

    </div>
</div>