<header class="application-header filled primary">

    <span class="brand" >{{#link-to 'index'}}MAPP{{/link-to}}</span>

    <div class="header-menu">

      {{#x-dropdown.x-trigger dropdownPivot='top right' triggerPivot='bottom right'}}
        <span class="header-options">{{i18n.locale}}</span>
      {{/x-dropdown.x-trigger}}

      <ul class="dropdown">
        <li {{action 'setLocale' 'fr'}}>fr</li>
        <li {{action 'setLocale' 'en'}}>en</li>
      </ul>

    </div>
</header>