<aside class="application-sidebar solid vertical flow">

    {{outlet 'header'}}

    <div class="vertical flow">

        <ul class="application-nav text-center flow">
            <li class="{{if (x-eq sidebarActiveTab 'data') 'active'}}" {{action 'navigateToProject'}}>1.{{t 'navigation.sidebar.data'}}</li>
            <li class="{{if (x-eq sidebarActiveTab 'visualizations') 'active'}} {{if sidebarTabVisualizationsDisabled 'disabled'}}" {{action 'navigateToVisualizations'}}>2.{{t 'navigation.sidebar.visualisations'}}</li>
            <li class="{{if (x-eq sidebarActiveTab 'export') 'active'}} {{if sidebarTabExportDisabled 'disabled'}}" {{action 'navigateToExport'}}>3.{{t 'navigation.sidebar.export'}}</li>
        </ul>

        <div class="sidebar-content flow vertical space-between">
            {{outlet 'sidebar'}}
        </div>

    </div>

</aside>